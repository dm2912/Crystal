<!-- left side carousel icon menu -->

<theme>
<formatVersion>4</formatVersion>
    <include>./common.xml</include>

<view name="system">
      <carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0.00 0</pos>
			<size>0.16 1</size>
			<logoScale>1.2</logoScale>
			<logoSize>0.11 0.11</logoSize>
			<color>00000000</color>
			<origin>0 0</origin>
			<logoAlignment>center</logoAlignment>
			<maxLogoCount>7</maxLogoCount>
			<zIndex>29</zIndex>
		</carousel>

		<image name="logo">
	</image>

	  <text name="systemInfo">
         <pos>-0.017 0.893</pos>
         <alignment>right</alignment>
   </text>
	
	 <helpsystem name="help">   
         <pos>0.007 0.965</pos>      
   </helpsystem> 

<image name="background" extra="true">
       <path>./assets/filters/${themecolor}/bg-system-left.svg</path>
      </image>
 
</view>
</theme>
