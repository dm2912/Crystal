<!-- Right side carousel text menu -->

<theme>
<formatVersion>4</formatVersion>
    <include>./common.xml</include>

<view name="system">
     <carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0.660 -0.0</pos>
    <logoAlignment>center</logoAlignment>
			<size>0.32 1</size>
			<logoScale>1.5</logoScale>
			<logoSize>0.2 0.2</logoSize>
			<color>00000000</color>
			<origin>0 0</origin>
			<logoRotation>-6.5</logoRotation>
			<logoRotationOrigin>0.5 0.5</logoRotationOrigin>
			<maxLogoCount>6</maxLogoCount>
			<zIndex>29</zIndex>
		</carousel>

<image name="logo">
	</image>
 
    <text name="systemInfo">
         <pos>0.007 0.893</pos>
   </text>
	  	<text name="description" extra="true">
	<visible>false</visible>
		</text>

  <text name="shortdescription" extra="true">
	<visible>false</visible>
		</text>

   <helpsystem name="help">
         <pos>0.007 0.965</pos>      
   </helpsystem>

<image name="background" extra="true">
       <path>./assets/filters/${themecolor}/bg-system-right43.svg</path>
      </image>
	   <text name="logoText">
         <color>${cgtbgedgeselect}</color>
        <fontPath>./fonts/${font1s}</fontPath>
		 <fontSize>0.05</fontSize>
         <alignment>center</alignment>
      </text>
	  </view>
</theme>
