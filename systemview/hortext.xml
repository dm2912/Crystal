<!-- Horizontal icon menu -->

<theme>
  <formatVersion>4</formatVersion>
    <include>./common.xml</include>
  <feature supported="carousel">
  <view name="system">
    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>-.32 -0.32</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1</logoScale>
	<logoRotation>-60</logoRotation>
      <logoSize>0.3 1</logoSize>
      <maxLogoCount>1</maxLogoCount>
    <logoAlignment>left</logoAlignment>
      <defaultTransition>instant</defaultTransition>	
    </carousel>
	  
	<image name="logo">
		<path>./../assets/logos/controllers/left/${system.theme}.png</path>
	</image>
    
    <text name="systemInfo">
         <pos>0.007 0.893</pos>
   </text>
	  
   <helpsystem name="help"> 
         <pos>0.007 0.965</pos>      
   </helpsystem>

<image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/bg_topbar.svg</path>
      </image>

	  </view>
  </feature>  
</theme>
