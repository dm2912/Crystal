<!-- slideshow -->

<theme>
  <formatVersion>4</formatVersion>
    <include>./../systems/${system.theme}.xml</include>  
 <include>./common.xml</include>

  <feature supported="carousel">

  <view name="system">

    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>.32 -0.32</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1</logoScale>
      <logoSize>0.3 .4</logoSize>
      <maxLogoCount>1</maxLogoCount>
    <logoAlignment>left</logoAlignment>
      <defaultTransition>instant</defaultTransition>	
    </carousel>

	<image name="logo">
		<path>./assets/logos/color_logo/${system.theme}.svg</path>
	</image>

	<image name="controller" extra="true">
		<path>./assets/logos/controllers/left/${system.theme}.png</path>
        <pos>0.018 0.640</pos>
         <maxSize>0.35 0.35</maxSize>
        <alignment>left</alignment>
      </image> 
	  
   <helpsystem name="help">
         <fontPath>./fonts/${font1s}</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.007 0.965</pos>      
         <textColor>${chelptext}</textColor>
   </helpsystem>  

    <text name="shortdescription" extra="true">
 <fontPath>./fonts/${font1s}</fontPath>
	<visible>false</visible>
		</text>

    <text name="systemInfo">
         <pos>0.015 0.650</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>${cinfotext}</color>
          <size>0.47 0.047</size>
         <alignment>left</alignment>
         <fontPath>./../fonts/${font1s}</fontPath>
         <fontSize>0.040</fontSize>
   </text>


		<text name="description" extra="true">
           <fontPath>./fonts/${font3s}</fontPath>
			<pos>0.682 0.27</pos>
            <size>0.300 0</size>
			<alignment>right</alignment>
			<color>${cdescriptiontext}</color>
			<fontSize>0.031</fontSize>
		</text>

 <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./assets/filters/${themecolor}/bg-system-right43.svg</path>
      </image> 

	   <text name="logoText">
         <color>${cgtbgedgeselect}</color>
        <fontPath>./fonts/${font1s}</fontPath>
		 <fontSize>0.05</fontSize>
         <alignment>center</alignment>
      </text>

	  </view>
  </feature>  
</theme>

