<!-- Horizontal icon menu -->

<theme>
  <formatVersion>4</formatVersion>
 
   <include>./common.xml</include>


  <feature supported="carousel">

  <view name="system">

    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>-0.22 -0.34</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1.2</logoScale>
      <logoSize>0.4 .9</logoSize>
      <maxLogoCount>1</maxLogoCount>
    <logoAlignment>left</logoAlignment>
      <defaultTransition>instant</defaultTransition>	
    </carousel>
   
    <text name="systemInfo">
         <pos>0.037 0.30</pos>
<fontSize>0.060</fontSize>
   </text>
	  
   <helpsystem name="help"> 
         <pos>0.007 0.965</pos>      
   </helpsystem>

<image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./assets/filters/${themecolor}/bg_topbar.svg</path>
      </image>

	   <text name="logoText">
         <color>${cgtbgedgeselect}</color>
        <fontPath>./fonts/${font1s}</fontPath>
		 <fontSize>0.1</fontSize>
         <alignment>left</alignment>
      </text>

		<text name="description" extra="true">
	<visible>false</visible>
		</text>

  <text name="shortdescription" extra="true">
	<visible>false</visible>
		</text>

	  </view>
  </feature>  
</theme>
